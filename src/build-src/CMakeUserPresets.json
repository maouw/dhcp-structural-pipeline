{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 29,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Base hidden preset to set general options",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_COMPILER_WARNINGS} $env{PRESET_COMPILER_OPT} $env{CXX_WARNINGS} $env{CXX_OPT}",
        "CMAKE_C_FLAGS": "$env{PRESET_COMPILER_WARNINGS} $env{PRESET_COMPILER_OPT} $env{PRESET_C_WARNINGS} $env{PRESET_C_OPT}"
      }
    },
    {
      "name": "intel",
      "inherits": "base",
      "hidden": true,
      "displayName": "Intel compilers",
      "environment": {
        "COMPILER_OPT": "-fp-model=precise"
      }
    },
    {
      "name": "intel-classic",
      "inherits": "intel",
      "displayName": "Intel Classic C/C++ compilers",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "icc",
        "CMAKE_CXX_COMPILER": "icpc"
      },
      "environment": {
        "PRESET_COMPILER_WARNINGS": "$penv{PRESET_COMPILER_WARNINGS} -diag-disable=10441 -diag-disable=11074 -diag-disable=11075 -diag-disable=11076",
        "CMPLR_ROOT": "$env{ONEAPI_ROOT}/compiler/classic",
        "LIBRARY_PATH": "$env{ONEAPI_ROOT}/compiler/classic/linux/compiler/lib/intel64_lin:$env{ONEAPI_ROOT}/compiler/classic/linux/lib:$penv{LD_LIBRARY_PATH}",
        "LD_LIBRARY_PATH": "$env{ONEAPI_ROOT}/compiler/classic/linux/lib:$env{ONEAPI_ROOT}/compiler/classic/linux/lib/x64:$env{ONEAPI_ROOT}/compiler/classic/linux/lib/oclfpga/host/linux64/lib:$env{ONEAPI_ROOT}/compiler/classic/linux/compiler/lib/intel64_lin:$env{ONEAPI_ROOT}/compiler/classic/linux/compiler/lib/intel64_lin:$penv{LD_LIBRARY_PATH}",
        "OCL_ICD_FILENAMES": "libintelocl_emu.so:libalteracl.so:$env{ONEAPI_ROOT}/compiler/classic/linux/lib/x64/libintelocl.so:$penv{OCL_ICD_FILENAMES}",
        "DIAGUTIL_PATH": "$env{ONEAPI_ROOT}/compiler/classic/sys_check/sys_check.sh",
        "PKG_CONFIG_PATH": "$env{ONEAPI_ROOT}/compiler/classic/lib/pkgconfig:$penv{PKG_CONFIG_PATH}",
        "PATH": "$env{ONEAPI_ROOT}/compiler/classic/linux/lib/oclfpga/bin:$env{ONEAPI_ROOT}/compiler/classic/linux/bin/intel64:$env{ONEAPI_ROOT}/compiler/classic/linux/bin:$penv{PATH}",
        "NLSPATH": "$env{ONEAPI_ROOT}/compiler/classic/linux/compiler/lib/intel64_lin/locale/%l_%t/%N:$penv{NLSPATH}",
        "CMAKE_PREFIX_PATH": "$env{ONEAPI_ROOT}/compiler/classic/linux/IntelDPCPP:$penv{CMAKE_PREFIX_PATH}"
      }
    },
    {
      "name": "intel-llvm",
      "inherits": "intel",
      "displayName": "Intel LLVM C/C++ compilers",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "icx",
        "CMAKE_CXX_COMPILER": "icpx"
      }
    },
    {
      "name": "intel-clang",
      "inherits": "intel",
      "displayName": "Intel LLVM C/C++ compilers (as clang)",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ]
}
